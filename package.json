{
  "name": "opol",
  "version": "0.1.0",
  "description": "The Opinionated Project Over Lord",
  "keywords": [],
  "author": "Brian Mearns <mearns.b@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mearns/opol.git"
  },
  "bugs": {
    "url": "https://github.com/mearns/opol/issues"
  },
  "homepage": "https://github.com/mearns/opol#readme",
  "engines": {
    "node": ">=8.2.1 <9"
  },
  "main": "dist/src/index.js",
  "scripts": {
    "clean": "rimraf coverage/ .nyc_output/ dist/",
    "check:lint:readme:markdown": "remark --no-stdout README.md",
    "check:lint:readme": "npm-run-all --parallel check:lint:readme:*",
    "check:lint:js:root": "standard ./*.js | snazzy",
    "check:lint:js:src": "standard src/**/*.js | snazzy",
    "check:lint:js:test": "standard test/**/*.js | snazzy",
    "check:lint:js:npmpackagejsonlint-config": "standard ./npmpackagejsonlint.config.js | snazzy",
    "check:lint:js": "npm-run-all --parallel check:lint:js:*",
    "check:lint:package-json": "npmPkgJsonLint .",
    "check:lint": "npm-run-all --parallel check:lint:*",
    "check": "npm-run-all --parallel check:*",
    "test": "nyc mocha --recursive ./test",
    "verify": "npm-run-all check test",
    "compile:common": "",
    "compile-prod:app": "babel src/ --out-dir dist/src/ --copy-files",
    "compile-dev:app": "babel src/ --out-dir dist/src/ --plugins node-source-map-support --source-maps inline --copy-files",
    "compile-dev:test": "babel test/ --out-dir dist/test/ --plugins node-source-map-support --source-maps inline --copy-files",
    "compile-prod": "npm-run-all compile-prod:* compile:*",
    "compile-dev": "npm-run-all compile-dev:* compile:*",
    "compile": "if-env NODE_ENV=production && npm run compile-prod || npm run compile-dev",
    "build": "npm-run-all clean verify compile"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "babel": {
    "presets": [
      "env"
    ],
    "plugins": [
      "transform-object-assign",
      "transform-object-rest-spread",
      "transform-class-properties",
      [
        "babel-plugin-transform-builtin-extend",
        {
          "globals": [
            "Error"
          ]
        }
      ]
    ]
  },
  "nyc": {
    "reporter": [
      "text",
      "lcov"
    ],
    "require": [
      "babel-core/register"
    ],
    "include": [
      "src/**"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 25,
    "branches": 25,
    "functions": 25,
    "lines": 25
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-eslint": "8.2.5",
    "babel-plugin-node-source-map-support": "0.0.1",
    "babel-plugin-transform-builtin-extend": "1.1.2",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-assign": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-preset-env": "1.7.0",
    "chai": "4.1.2",
    "copyfiles": "2.0.0",
    "if-env": "1.0.4",
    "lodash.set": "4.3.2",
    "mocha": "5.2.0",
    "npm-package-json-lint": "3.1.0",
    "npm-run-all": "4.1.3",
    "nyc": "12.0.2",
    "remark-cli": "5.0.0",
    "rimraf": "2.6.2",
    "sinon": "6.1.3",
    "sinon-chai": "3.2.0",
    "snazzy": "7.1.1",
    "source-map-support": "0.5.6",
    "standard": "11.0.1"
  },
  "dependencies": {
    "bluebird": "3.5.1",
    "fs-extra": "7.0.0",
    "lodash.get": "4.4.2",
    "mz": "2.7.0",
    "set": "1.1.1"
  }
}
